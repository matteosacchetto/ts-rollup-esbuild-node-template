{
  "$schema": "https://biomejs.dev/schemas/1.6.0/schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": ["*.json", "dist/*"],
    "include": [
      "src/*.ts",
      "test/*.ts",
      "scripts/*.mjs",
      "rollup.config.mjs",
      "rollup.plugins.mjs",
      "test.runner.mjs"
    ]
  },
  "linter": {
    "ignore": ["*.json", "dist/*"],
    "include": [
      "src/*.ts",
      "test/*.ts",
      "scripts/*.mjs",
      "rollup.config.mjs",
      "rollup.plugins.mjs",
      "test.runner.mjs"
    ],
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessConstructor": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "style": {
        "useTemplate": "warn",
        "noUnusedTemplateLiteral": "warn",
        "noUselessElse": "warn",
        "noNonNullAssertion": "off",
        "useSingleVarDeclarator": "off",
        "useEnumInitializers": "warn",
        "useExportType": "error",
        "useImportType": "error",
        "useNodejsImportProtocol": "error",
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "filenameCases": ["kebab-case"],
            "strictCase": false
          }
        },
        "useConsistentArrayType": "warn"
      },
      "correctness": {
        "noUnusedImports": "warn",
        "noInvalidUseBeforeDeclaration": "error",
        "noUnusedPrivateClassMembers": "warn"
      },
      "nursery": {
        "noUselessTernary": "error",
        "noExportsInTest": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "ignore": ["dist/*"],
    "include": [
      "src/*.ts",
      "test/*.ts",
      "scripts/*.mjs",
      "rollup.config.mjs",
      "rollup.plugins.mjs",
      "test.runner.mjs",
      "*.json"
    ]
  },
  "javascript": {
    "formatter": {
      "indentWidth": 2,
      "quoteStyle": "single",
      "trailingComma": "es5"
    }
  }
}
